	      if sel[2 ..][t-delay] then
                 in1[n ..][t-delay]
	      else
	         in5[n ..][t-delay]
	   else
	      if sel[2 ..][t-delay] then
	      	 in3[n ..][t-delay]
	      else
                 in7[n ..][t-delay]


