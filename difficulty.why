theory NOT

use import Wire
use import WireVector
use import int.Int
use import bool.Bool
use NAND

function in0: Wire.t
function out0: Wire.t

constant delay: int = NAND.delay

clone NAND as NAND1 with function in0 = in0, function in1 = in0, function out0 = out0

lemma not_sem:
	forall t: int.
	out0[t] = notb in0[t-delay]

end

