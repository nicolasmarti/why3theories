theory NAND

use import Wire
use import WireVector
use import int.Int
use import bool.Bool

function in0: Wire.t
function in1: Wire.t
function out0: Wire.t

constant delay: int = 1

axiom nand_sem: forall t: int.  out0[t] = notb (andb in0[t-delay] in1[t-delay])

end

